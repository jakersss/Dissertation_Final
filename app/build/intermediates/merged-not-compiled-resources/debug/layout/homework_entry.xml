<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/homeworkNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        android:text="@string/homework_name_title"/>

    <android.support.design.widget.TextInputEditText
        android:layout_below="@id/homeworkNameTitle"
        android:id="@+id/homeworkNameEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/homework_name_entry"
        android:textColorHint="@color/colourTextHint"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#000000"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_below="@id/homeworkNameEntry"
        android:layout_marginTop="10dp"
        android:id="@+id/subjectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        android:text="Subject"/>

    <Spinner
        android:layout_below="@id/subjectTitle"
        android:id="@+id/homeworkSubjectEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/homework_name_entry"
        android:textColorHint="@color/colourTextHint"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/colourText"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_below="@id/homeworkSubjectEntry"
        android:layout_marginTop="10dp"
        android:id="@+id/dueDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        android:text="Subject"/>

    <DatePicker
        android:layout_below="@id/dueDateTitle"
        android:id="@+id/dueDateEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/homework_name_entry"
        android:textColorHint="@color/colourTextHint"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/colourText"
        android:paddingBottom="10dp"/>
    
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addHomework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:backgroundTint="@color/colour_accept"
        android:src="@drawable/plus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>