<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="30dp"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back">

        <ImageView
            android:id="@+id/subject_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/title_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/subject_photo"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:text="@string/Subject_Title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title_teacherNameAndRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_subject"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/subject_photo"
            android:paddingLeft="10dp"
            android:text="@string/Name_And_Room"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/title_homeworksDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_teacherNameAndRoom"
            android:layout_toRightOf="@+id/subject_photo"
            android:paddingLeft="10dp"
            android:text="@string/Room_Subject"
            android:textSize="16sp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:text="@string/Go_To_Subject"
            android:textSize="25dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>