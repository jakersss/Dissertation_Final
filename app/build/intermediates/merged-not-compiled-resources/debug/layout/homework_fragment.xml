<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/image_and_fragment_master"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    
    <RelativeLayout
        android:id="@+id/image_master_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/homework_identifier"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu_homework"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_toRightOf="@id/homework_identifier"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/default_colour_value"
            android:layout_centerHorizontal="true"
            android:text="All homework"/>

    </RelativeLayout>
    
    <android.support.v7.widget.CardView
        android:id="@+id/homework_list"
        android:layout_below="@id/image_master_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.CardView>
</RelativeLayout>