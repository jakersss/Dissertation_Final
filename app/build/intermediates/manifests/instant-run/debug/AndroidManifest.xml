<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jakers.dissertation_work"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.jakers.dissertation_work.MainActivity"
            android:label="@string/index_title"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.jakers.dissertation_work.calendar" />
        <activity
            android:name="com.example.jakers.dissertation_work.contact"
            android:label="@string/contact_title" />
        <activity
            android:name="com.example.jakers.dissertation_work.homework"
            android:label="@string/homework_title" />
        <activity
            android:name="com.example.jakers.dissertation_work.map"
            android:label="@string/map_title" />
        <activity
            android:name="com.example.jakers.dissertation_work.subject"
            android:label="@string/subject_title" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.example.jakers.dissertation_work.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>